{{!--
  layouts/default

  @param {String} file.nav The navigation object provided by gulp-nav
  @param {String} [file.data.title] Page sub-title

  @block content The main content block
--}}
<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Shift{{#if file.data.title}}: {{file.data.title}}{{/if}}</title>
</head>
<body>
{{#with file.nav.root}}
  <h1><a href="{{href}}">Shift</a></h1>
{{/with}}
<nav class="global">
  {{> navigation file.nav.root}}
</nav>
<main class="main" role="main">
  {{{block "content"}}}
</main>
<footer>
  <small>This site was generated with <a href="{{package.homepage}}">{{package.name}}</a>.</small>
</footer>
</body>
</html>
